<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.test1.mapper.BoaMapper">

	<select id="boaList" parameterType="hashmap" resultType="com.example.test1.model.Board">
		SELECT
			BOARDNO AS boardNo,
			TITLE AS title,
			USERID AS userId,
			CNT AS cnt
		FROM TBL_BOARD
		<where>
			<!-- keyword가 존재하면: 번호 일치 또는 제목 부분검색 조건을 추가 -->
			<if test="keyword != null and keyword != ''">
				AND (TO_CHAR(BOARDNO) = #{keyword} OR TITLE LIKE '%' || #{keyword} || '%')
			</if>
			<!-- title이 존재하면: 제목 부분검색 조건을 추가 -->
			<if test="title != null and title != ''">
				AND TITLE LIKE '%' || #{title} || '%'
			</if>
			<!-- userId가 존재하면: 작성자 아이디 일치 조건을 추가 -->
			<if test="userId != null and userId != ''">
				AND USERID = #{userId}
			</if>
		</where>
		ORDER BY BOARDNO DESC
	</select>
	
	<!--
		[게시글 삭제 - boaDel]
		- BoaMapper.boaDel(int boardno) 시그니처에 맞춰 parameterType="int" 사용
		- 단일 기본형 파라미터는 #{value} 로 접근합니다.
	-->
	<delete id="boaDel" parameterType="int" >
		DELETE FROM TBL_BOARD
		WHERE BOARDNO = #{value}
	</delete>
	<!--
	<delete id="boaDel" parameterType="int" resultType="int">
		delete 
		FROM BOARD 
		WHERE BOARDNO = #{keyword}
	</delete>
	-->
</mapper>




