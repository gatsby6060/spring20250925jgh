	<insert id = "insertProduct" 
			parameterType="hashmap" 
			useGeneratedKeys="true" 
			keyColumn="FOODNO" 
			keyProperty="foodNo">
		INSERT INTO tbl_food 
		VALUES (B_SEQ.NEXTVAL, #{title}, #{contents}, #{userId}, 0, 0, 1, SYSDATE, SYSDATE)
	</insert>

